{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "Bash(bundle:*)",
      "Bash(rake:*)",
      "Bash(git:*)",
      "Bash(ruby:*)",
      "Bash(ls:*)",
      "Bash(python3 -m json.tool:*)",
      "Bash(gem build:*)",
      "Bash(python3:*)",
      "Bash(grep:*)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "mcp__plugin_github_github__pull_request_read",
      "mcp__plugin_github_github__list_pull_requests",
      "Skill(code-review:code-review)"
    ]
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "ruby -e 'require \"json\"; input = JSON.parse($stdin.read); path = input.dig(\"tool_input\", \"file_path\") || \"\"; exit 0 unless path.end_with?(\".rb\"); system(\"bundle exec rubocop --format simple #{path} 2>/dev/null\") || true'",
            "timeout": 30,
            "async": true
          }
        ]
      }
    ]
  }
}
